<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>edu.hearc.ODI.filters.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DisplayMessage</servlet-name>
        <servlet-class>edu.hearc.ODI.servlets.DisplayMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayInformations</servlet-name>
        <servlet-class>edu.hearc.ODI.servlets.DisplayInformations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AskNameToDisplay</servlet-name>
        <servlet-class>edu.hearc.ODI.servlets.AskNameToDisplay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AskNameToStoreSession</servlet-name>
        <servlet-class>edu.hearc.ODI.servlets.AskNameToStoreSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Session</servlet-name>
        <servlet-class>edu.hearc.ODI.servlets.Session</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayMessage</servlet-name>
        <url-pattern>/DisplayMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayInformations</servlet-name>
        <url-pattern>/DisplayInformations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AskNameToDisplay</servlet-name>
        <url-pattern>/AskNameToDisplay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AskNameToStoreSession</servlet-name>
        <url-pattern>/AskNameToStoreSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Session</servlet-name>
        <url-pattern>/Session</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>AskNameToDisplay</welcome-file>
    </welcome-file-list>
</web-app>
